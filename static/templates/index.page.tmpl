{{ template "base" . }}
{{ define "title" }}
	Simple Paste - Home
{{ end }}
{{ define "select" }}
	<select class="header__select">
		<option value="text">Text only</option>
		<option value="bash">Bash</option>
		<option value="go">Golang</option>
		<option value="c">C</option>
		<option value="css">CSS</option>
		<option value="cpp">HTML</option>
		<option value="python">Python</option>
		<option value="ruby">Ruby</option>
		<option value="rust">Rust</option>
		<option value="javascript">Javascript</option>
	</select>
{{ end }}
{{ define "address" }}
	<input class="header__input" type="text" value="{{ .Address }}" disabled />
	{{ template "select" . }}
	<div class="header__icons">
		<img class="header__save" src="./static/svg/save.svg" />
	</div>
{{ end }}
{{ define "main" }}
	<div class="main__numbers">
		<div class="main__number">1</div>
	</div>
	<textarea
		class="main__input"
		type="text"
		spellcheck="false"
		autocomplete="off"
		placeholder="Enter code to paste."
		autofocus
	></textarea>
{{ end }}
